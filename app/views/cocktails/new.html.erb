<div class="container">
  <h1>Creat a new cocktail</h1>
  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "create a cocktail", class: "btn btn-primary" %>
  <% end %>
  <br>
  <br>
  <br>
  <%= link_to "Back to list", cocktails_path, class: "btn btn-primary" %>
</div>
